<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>This is the campgrounds page!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <br>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </header>

    <h3 class="text-center">Our Most Popular Campgrounds!</h3>
    <br>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src ="<%= campgrounds.image %>">
                    <div class="caption">
                        <h4><%= campgrounds.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>



<% include ../partials/footer %>